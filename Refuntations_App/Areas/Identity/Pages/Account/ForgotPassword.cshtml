@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zaboravljena lozinka?";
}


<div class="row">
    <div class="col-md-4">
        
    </div>
</div>


<div class="card p-3 mt-5">
    <div class="row">
        <div class="col mx-auto w-75 mt-5">
            <div class="mx-auto mt-4 mb-3"><h1 class="text-center">@ViewData["Title"]</h1></div>
            <section>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #d90142 !important; color: white; margin-top: 10px;">Pošalji novu lozinku</button>
                </form>
            </section>
        </div>
        <div class="col mx-auto w-75 ms-5  mt-5">
            <section>
                <img src="~/mercator_s.png" width=400px height="400px" />
            </section>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
