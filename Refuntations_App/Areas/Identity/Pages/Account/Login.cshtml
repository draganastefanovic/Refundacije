@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava na sistem";
}
<div class="card p-3 mt-5">
    <div class="row">
        <div class="col mx-auto w-75 mt-5">
            <div class="mx-auto mt-4 mb-3"><h1 class="text-center">@ViewData["Title"]</h1></div>
            <section>
                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating  mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                               Zapamti me na ovom uređaju
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #d90142 !important; color: white">Prijava</button>
                    </div>
                    <div class="mt-4">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration: none;">Zaboravljena lozinka?</a>
                        </p>
                        <p>
                            <a id="forgot-password" asp-page="./Register" style="text-decoration: none;">Registruj se</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col mx-auto w-75 ms-5  mt-5">
            <section>
                <img src="~/mercator_s.png" width=400px height="400px" />
            </section>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
