@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija naloga";
}


<div class="card p-3 mt-5">
    <div class="row">
        <div class="col mx-auto w-75 mt-4">
            <div class="mx-auto mt-4 mb-3"><h1 class="text-center">@ViewData["Title"]</h1></div>
            <section>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating  mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
                    <div class="form-floating  mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color: #d90142 !important; color: white">Registracija</button>
        </form>
                <p class="mt-3">
                    <a id="forgot-password" asp-page="./Login" style="text-decoration: none;">Uloguj se</a>
                </p>
            </section>
        </div>
        <div class="col mx-auto w-75 ms-5  mt-5">
            <section>
                <img src="~/mercator_s.png" width=400px height="400px" />
            </section>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
